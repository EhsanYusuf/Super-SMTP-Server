<UserControl x:Class="SuperSmtpGui.SMTP.MailViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
            <RowDefinition Height="25*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="191*" />
            <ColumnDefinition Width="309*" />
        </Grid.ColumnDefinitions>
        <Label Content="From:" Height="25" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" />
        <Label Content="To:" Height="25" HorizontalAlignment="Left" Name="label2" VerticalAlignment="Top" Grid.Row="1" />
        <TextBlock Height="22" Margin="46,4,0,24" Name="textBlock1" Text="{Binding Path=From.Address}" VerticalAlignment="Center" Grid.RowSpan="2" TextTrimming="CharacterEllipsis" />
        <TextBlock Grid.Row="1" Height="22" HorizontalAlignment="Left" Margin="46,4,0,0" Name="textBlock2" Text="{Binding Path=To[0].Address}" VerticalAlignment="Center" Width="145" TextTrimming="CharacterEllipsis" />
        <TextBlock Grid.Column="1" Grid.RowSpan="2" Height="26" VerticalAlignment="Center" Margin="64,14,0,10" Name="textBlock3" Text="{Binding Path=Subject}" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" Width="233" />
        <Label Content="Subject:" Grid.Column="1" Grid.RowSpan="2" Height="28" HorizontalAlignment="Left" Margin="6,10,0,0" Name="label3" VerticalAlignment="Top" />
    </Grid>
</UserControl>
